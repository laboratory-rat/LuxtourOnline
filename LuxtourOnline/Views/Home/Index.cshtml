    <script src="~/bower_components/angular-touch/angular-touch.min.js"></script>


    <script>
        $('#tours').slick({
            centerMode: true,
            centerPadding: '0%',
            slidesToShow: 1,
            fade: false,
            arrows: false,
            responsive: [
              {
                  breakpoint: 768,
                  settings: {
                      arrows: false,
                      centerMode: true,
                      centerPadding: '40px',
                      slidesToShow: 3
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
