                      centerPadding: '40px',
                      slidesToShow: 1
                  }
              }
            ]
        });

        $('#team').slick({
            centerMode: true,
            centerPadding: '0px',
            slidesToShow: 3,
            fade: false,
            arrows: true,
            responsive: [
              {
                  breakpoint: 768,
                  settings: {
                      arrows: false,
                      centerMode: true,
                      centerPadding: '40px',
                      slidesToShow: 3
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
                      arrows: false,
                      centerMode: true,
                      centerPadding: '40px',
                      slidesToShow: 1
                  }
              }
            ]
        });

        $('#reviews').slick({
            centerMode: true,
            centerPadding: '0px',
            slidesToShow: 1,
            fade: true,
            arrows: true,
            responsive: [
              {
                  breakpoint: 768,
                  settings: {
                      arrows: false,
                      centerMode: true,
                      centerPadding: '40px',
                      slidesToShow: 3
                  }
              },
              {
                  breakpoint: 480,
                  settings: {
                      arrows: false,
                      centerMode: true,
                      centerPadding: '40px',
                      slidesToShow: 1
                  }
              }
            ]
        });

        window.onscroll = function () {
            var height = window.pageYOffset || document.documentElement.scrollTop;
            var h = $('#head');

            if (height < 100) {
                h.removeClass('app-white-1');
                h.removeClass('app-white-2');
                h.removeClass('app-white-3');
                h.removeClass('app-white-4');
            }
            else if (height >= 100 && height < 200) {
                h.addClass('app-white-1');
                h.removeClass('app-white-2');
                h.removeClass('app-white-3');
                h.removeClass('app-white-4');
            }
            else if (height >= 200 && height < 300) {
                h.removeClass('app-white-1');
                h.addClass('app-white-2');
                h.removeClass('app-white-3');
                h.removeClass('app-white-4');
            }
            else if (height >= 300 && height < 400) {
                h.removeClass('app-white-1');
                h.removeClass('app-white-2');

                h.addClass('app-white-3');
                h.removeClass('app-white-4');
            }
            else {
                h.removeClass('app-white-1');
                h.removeClass('app-white-2');
                h.removeClass('app-white-3');
                h.addClass('app-white-4')
            }
        };

        var app = angular.module("LandApp", ['ngAnimate', 'ngTouch', 'angular-carousel']);

        app.controller("LandCtrl", ['$scope', '$http', function ($scope, $http) {
            $scope.Tours = null;
            $scope.Language;

            $scope.LoadTours = function()
            {
                $http.get("/api/tourshort?order=Date&language=" + $scope.Language)
                .success(function (resp) {
                    $scope.Tours = [];

                    for(var i = 0; i < resp.length; i++)
                    {
                        if (resp[i].Image !== "")
                            $scope.Tours.push(resp[i]);
                    }
                });
            }

        }]);

    </script>
    <script src="~/Scripts/Home/MdlDomUpdater.js"></script>
}