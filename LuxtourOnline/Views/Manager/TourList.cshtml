@model LuxtourOnline.Models.Manager.PageTourModel

@{
    ViewBag.Title = "Tour";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "EditTour", new { id = -1})
</p>
<div class="mdl-grid">
    <div 
         class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone">

        <div class="mdl-typography--headline">
            <h2>Tours list</h2>
        </div>

        <div class="mdl-grid">

            @foreach (var tour in Model.Tours)
            {

                <div class="mdl-cell-4-col app-padding-8">
                    <div class="mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title" style="height: 300px; background-image: url(@Url.Content(tour.ImageUrl)); background-size:cover;">
                            <div class="mdl-card__title-text">
                                @Html.DisplayFor(m => tour.Title)
                            </div>
                            
                        </div>
                        <div class="mdl-card__supporting-text">
                            @Html.DisplayNameFor(x => tour.Price): @Html.DisplayFor(x => tour.Price)<br />
                            @Html.DisplayNameFor(model => tour.Adult) : @Html.DisplayFor(x => tour.Adult)<br />
                            @Html.DisplayNameFor(model => tour.Child): @Html.DisplayFor(x => tour.Child)<br />
                            @Html.DisplayNameFor(model => tour.DaysCount): @Html.DisplayFor(x => tour.DaysCount)<br />
                            @Html.DisplayNameFor(model => tour.ModifyData): @Html.DisplayFor(x => tour.ModifyData)<br />
                            @Html.DisplayNameFor(model => tour.CreateData): @Html.DisplayFor(x => tour.CreateData)<br />
                            @Html.DisplayNameFor(model => tour.ModifyUser) : @Html.DisplayFor(x => tour.ModifyUser.FullName)<br />
                        </div>
                        <div class="mdl-card__menu">
                            <button class="mdl-button mdl-js-button mdl-js-ripple-effect">
                                Edit
                            </button>
                            <button class="mdl-button mdl-js-button mdl-js-ripple-effect">
                                Diplay
                            </button>
                            <button class="mdl-button mdl-js-button mdl-js-ripple-effect">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>

            }
        </div>

    </div> 
</div>


