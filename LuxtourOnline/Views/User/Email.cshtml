@model LuxtourOnline.Models.ChangeEmail

@{
    ViewBag.Title = "Email";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="mdl-grid" style="max-width:600px; margin: 0 auto;">
    <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        @using (Html.BeginForm())
            {

            <div class="mdl-card__title mdl-color--primary" style="height: 250px;
                    background-size: cover; background-image:url(@Url.Content("~/Content/Resources/abstract_back.png"));">
                <div class="mdl-card__title-text mdl-color-text--white">Change email</div>
            </div>
            <div class="mdl-card__supporting-text">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => Model.Id)
                <div class="mdl-typography--body-1 mdl-color-text--red">
                    @Html.ValidationSummary()
                </div>
                <div class="mdl-textfield mdl-textfield--full-width mdl-js-textfield">
                    <input type="email" class="mdl-textfield__input" name="NewEmail" id="NewEmail" />
                    @Html.LabelFor(x => Model.NewEmail, new { @class = "mdl-textfield__label" })
                </div>
                <div class="mdl-textfield mdl-textfield--full-width mdl-js-textfield">
                    @Html.LabelFor(x => Model.Password, new { @class = "mdl-textfield__label" })
                    @Html.PasswordFor(x => Model.Password, new { @Class = "mdl-textfield__input" })
                </div>
            </div>
                <div class="mdl-card__actions">
                    @Html.ActionLink("Back", "Index", null, new { @class = "mdl-button mdl-js-button" })
                    <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary mdl-color-text--white"
                           value="Update" style="float:right; width:200px;" />
                </div>
        }

    </div>
</div>

@section Scripts
{
    @Html.Partial("jquery")
}
